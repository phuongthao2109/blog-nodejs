<div class="mt-4">
   <div class="row">
      <div class="col-lg-3">
         <h3>Edit Course Page</h3>
         <a href="/admin/courses" class="btn btn-outline-primary">Go to List</a>
      </div>
      <div class="col-lg-9">
         <form id="editForm" name="editForm" method="POST" action="/admin/course/{{oldcourse._id}}?_method=PATCH">
            <div class="mb-3"><label for="">name</label> <input class=form-control id="name" name="name"
                  value="{{oldcourse.name}} " placeholder="">
            </div>
            <div class="mb-3"><label for="">descriptors</label>
               <textarea class=form-control id="desc"  name="desc" placeholder="">{{oldcourse.desc}}</textarea>
            </div>
            <div class="mb-3"><label for="">videoId</label> <input class=form-control id="videoId"
                  value="{{oldcourse.videoId}}" name="videoId" placeholder="">
            </div>
            <div class="mb-3">
               <p>Choose cate</p><select class="form-control form-select" id="level" value="{{oldcourse.level}}"
                  name="level">
                  {{!-- <option value="basic">Cơ bản </option> --}}
                  <option value="{{oldcourse.level}}">{{oldcourse.level}}</option>
               </select>
            </div>

            <button class="btn btn-primary" id="btnAdd">Submit</button>
         </form>
      </div>
   </div>
</div>