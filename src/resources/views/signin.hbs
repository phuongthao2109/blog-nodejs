<form class="form w-50 bg-light p-5 mx-auto border border-light">
   <h3 class="text-center mb-3">Signin Form</h3>
   <div class="form-group">
      <label for="exampleInputEmail1">Email address</label>
      <input type="email" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp"
         placeholder="Enter email">
   </div>
   <div class="form-group">
      <label for="exampleInputPassword1">Password</label>
      <input type="password" class="form-control" id="exampleInputPassword1" placeholder="Password">
   </div>
   <div class="d-flex justify-content-between form-group form-check">
      <div class="">
         <input type="checkbox" class="form-check-input" id="exampleCheck1">
         <label class="form-check-label" for="exampleCheck1">Check me out</label>
      </div>
      <div class="">
         <a href="/signup" class="font-weight-bold text-secondary">SIGN UP ?</a>
      </div>

   </div>
   <button type="submit" class="btn btn-primary">Submit</button>
</form>